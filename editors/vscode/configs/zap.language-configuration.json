{
    "comments": {
        "lineComment": "--"
    },

    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],

    "autoClosingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "\"", "close": "\"" }
    ],

    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""]
    ],

    "indentationRules": {
        "increaseIndentPattern": "^\\s*[a-zA-Z0-9_]+\\s*=\\s*\\{|^\\s*\\{",
        "decreaseIndentPattern": "^\\s*\\}"
    },

    "wordPattern": "[a-zA-Z0-9_]+"
}
